@model Exercise6.Models.DataModel

<form asp-controller="Home" asp-action="Index" method="post">
    <fieldset>
        <legend><i>Contact Information</i></legend>
        <label asp-for="firstName">First name:</label>
        <input asp-for="firstName" type="text"><br>
        <label asp-for="lastName">Last name:</label>
        <input asp-for="lastName"><br>
        <label asp-for="email">E-mail:</label>
        <input asp-for="email" type="text"><br>
    </fieldset>
    <fieldset>
        <legend><i>Competition Question</i></legend>
        <label>How tall in the Eiffel Tower in Paris, France?</label><br>
        <input type="radio" asp-for="competitiveQuestion" value="584ft" /><label>584ft</label><br>
        <input type="radio" asp-for="competitiveQuestion" value="784ft" /><label>784ft</label><br>
        <input type="radio" asp-for="competitiveQuestion" value="984ft" /><label>984ft</label><br>
        <input type="radio" asp-for="competitiveQuestion" value="1184ft" /><label>1184ft</label><br>
    </fieldset>
    <fieldset>
        <legend><i>Tiebreaker Question</i></legend>
        <label for="tiebreaker">In 25 words or less, say why would like to win $10,000</label><br>
        <textarea asp-for="tiebreakerQuestion" id="tiebreaker" rows="10" cols="35"></textarea><br>
    </fieldset>
    <fieldset>
        <legend><i>Enter competition</i></legend>
        <input type="submit" value="Enter Competition">
    </fieldset>
</form>